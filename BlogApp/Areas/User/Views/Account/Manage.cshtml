@model ApplicationUserViewModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="shadow-lg p-3 mb-5 mt-5 rounded">
    <h1 class="text-center" style="font-family: 'Comic Sans MS';">Manage Account</h1>
    <hr style="height: 5px; background-color: none;" />
    <form class="mt-5" style="padding: 0 60px;" id="changeDataForm" method="post">
        <div class="row">
            <div class="col">
                <label asp-for="FirstName" class="form-label"></label>
                <input value="@Model.FirstName" asp-for="FirstName" type="text" class="form-control" disabled />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="LastName" class="form-label"></label>
                <input value="@Model.LastName" asp-for="LastName" type="text" class="form-control" disabled />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <label class="mt-3" asp-for="Email" class="form-label"></label>
        <input value="@Model.Email" asp-for="Email" type="email" class="form-control" disabled />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label class="mt-3" asp-for="UserName" class="form-label"></label>
        <input value="@Model.UserName" asp-for="UserName" type="text" class="form-control" disabled />
        <span asp-validation-for="UserName" class="text-danger"></span>

        <label class="mt-3" asp-for="PhoneNumber" class="form-label"></label>
        <input value="@Model.PhoneNumber" asp-for="PhoneNumber" type="tel" palceholder="Phone number" class="form-control" disabled />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </form>

    <div id="change" class="text-center mt-5">
        <button id="changeData" class="btn btn-primary">Change Data</button>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}