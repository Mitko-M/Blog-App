@using BlogApp.Core.Models.Identity

@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutWithoutWidgets.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header">
                <h3 class="text-center font-weight-light my-4">Login</h3>
            </div>
            <div class="card-body">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="@Model.UserName" class="form-control" autocomplete="username" placeholder="Enter your username or email" aria-required="true" />
                        <label asp-for="@Model.UserName" class="form-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="@Model.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" aria-required="true" />
                        <label asp-for="@Model.Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" type="checkbox" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        <a class="small" href="#">Forgot Password?</a>
                        <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <a asp-controller="User" asp-action="Register">Need an account? Sign up!</a>
            </div>
        </div>
    </div>
</div>
