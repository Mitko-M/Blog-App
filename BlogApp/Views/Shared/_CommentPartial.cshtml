@using BlogApp.Core.Models.Comment

@model List<CommentViewModel>

@if (Model.Count > 0)
{
    foreach (var comm in Model)
    {
        <div class="d-flex">
            <div class="ms-3">
                @if (comm.PostOwnerId == comm.UserName)
                {
                    <div class="fw-bold">@(comm.UserName)(Post Owner)</div>
                }
                else
                {
                    <div class="fw-bold">@comm.UserName</div>
                }
                @comm.Content
                <div class="small text-muted">Commented on @comm.CommentUploadDate.ToString(PostDateFormat)</div>
            </div>
        </div>
    }
}
else
{
    <h4>No comments yet!</h4>
}

